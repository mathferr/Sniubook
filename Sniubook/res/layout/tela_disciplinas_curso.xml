<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.com.main.TelaDisciplinasCurso" >

    <TextView
        android:id="@+id/tvNomeDisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Curso:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvNomeCursoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNomeDisc"
        android:layout_alignBottom="@+id/tvNomeDisc"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/tvNomeDisc"
        android:text="Nome Curso"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNomeDisc"
        android:layout_below="@+id/tvNomeDisc"
        android:text="Disciplinas:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btVoltarDisicplinasCurso"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Voltar" />

    <Button
        android:id="@+id/btAvaliarDisciplina"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btVoltarDisicplinasCurso"
        android:layout_alignParentLeft="true"
        android:text="Avaliar disciplina selecionada" />

    <ListView
        android:id="@+id/listDisciplinasCurso"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants" >
    </ListView>

</RelativeLayout>